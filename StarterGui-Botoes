local Player = game.Players.LocalPlayer
local Char = Player.Character
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local gui = script.Parent.Parent.criacao

--Guis e Botoes
local Comeco = script.Parent.comeco
local Meio = script.Parent.meio
local Finalizacao = script.Parent.final

local comecoBotao = Comeco.Comecar
local meioBotao = Meio.avancar
local finalizacaoBotao = Finalizacao.jogar

--Nome
local nomeData = script.Parent.Data.nome
local nomeBox = script.Parent.meio.nomeBox

--Sobrenome
local sobrenomeData = script.Parent.Data.sobrenome
local sobrenomeBox = script.Parent.meio.sobrenomeBox

--Idade
local idadeData = script.Parent.Data.idade
local idadeBox = script.Parent.meio.idadeBox
local idadeInv = script.Parent.meio.idade.idadeInv

--Genero
local generoData = script.Parent.Data.genero
local generoBox = script.Parent.meio.generoBox
local generoInv = script.Parent.meio.genero.generoInv

--Camisa
local camisa = script.Parent.meio.Camisa
local camisaId = script.Parent.Data.camisaId
local camisa1 = camisa.c2
local camisa2 = camisa.c1

--Calça
local calca = script.Parent.meio.Calca
local calcaId = script.Parent.Data.calcaId
local calca1 = calca.c2
local calca2 = calca.c1

--Cabelos
local cabelo = script.Parent.meio.Cabelo
local cabeloData = script.Parent.Data.cabeloVar
local cabelo1 = cabelo.c2
local cabelo2 = cabelo.c1
local cWeld = Instance.new("WeldConstraint")
local rC = Instance.new("RigidConstraint")
cWeld.Parent = Char
cWeld.Part0 = Char:WaitForChild("Head")
rC.Attachment0 = Char:WaitForChild("Head").FaceCenterAttachment

--Rostos
local rosto = script.Parent.meio.Rostos
local rostoData = script.Parent.Data.rostoId
local rosto1 = rosto.c2
local rosto2 = rosto.c1

--Cor de pele
local rassa = script.Parent.meio.Rassa
local rassaData = script.Parent.Data.cor
local rassaInv = script.Parent.meio.genero.corInv
local rassa1 = rassa.c2
local rassa2 = rassa.c1

--Confirmar
local nomeF = script.Parent.final.nome
local sobrenomeF = script.Parent.final.sobrenome
local idadeF = script.Parent.final.idade
local generoF = script.Parent.final.genero

local evento = game.ReplicatedStorage.CriadorDePersonagem.RemoteEvent

comecoBotao.MouseButton1Click:Connect(function()
	if Player.DadosPessoais.Criado.Value == 1 then
		Comeco.Visible = false
		Meio.Visible = true
	end
end)

meioBotao.MouseButton1Click:Connect(function()
	-- Transformações para data
	nomeData.Value = nomeBox.Text
	sobrenomeData.Value = sobrenomeBox.Text
	idadeData.Value = tonumber(idadeBox.Text)
	generoData.Value = generoBox.Text
	local c1 = camisaId.Value
	local c2 = calcaId.Value
	local c3 = rostoData.Value
	local c4 = rassaData.Value
	local c5 = cabeloData.Value
	wait(.1)

	if idadeData.Value >= 18 and idadeData.Value <= 90 then 
		idadeInv.Visible = false
	if generoData.Value == "m" or generoData.Value == "f" or generoData.Value == "M" or generoData.Value == "F" then
		generoInv.Visible = false
	if rassaData.Value == "Light orange" or rassaData.Value == "Nougat" or rassaData.Value == "Dark orange" or rassaData.Value == "Burnt Sienna" then 
		rassaInv.Visible = false
				
				evento:FireServer(nomeData.Value, sobrenomeData.Value, idadeData.Value, generoData.Value, c1, c2, c3, c4, c5, "criadorDePersonagemViniCy")
				
				nomeF.Text = "Nome: "..nomeData.Value
				sobrenomeF.Text = "Sobrenome: "..sobrenomeData.Value
				idadeF.Text = "Idade: "..idadeData.Value
				generoF.Text = "Gênero: "..generoData.Value
				wait(.1)
				Meio.Visible = false
				Finalizacao.Visible = true
			else
				rassaInv.Visible = true 
			end
		else
			generoInv.Visible = true 
		end
	else
		idadeInv.Visible = true 
	end
end)

--Roupa
camisa1.MouseButton1Click:Connect(function()
	if camisaId.Value == "rbxassetid://7521969813" then
		camisaId.Value = "rbxassetid://6273977860"
		Char.Camisa.ShirtTemplate = camisaId.Value
	elseif camisaId.Value == "rbxassetid://6273977860" then
		camisaId.Value = "rbxassetid://5581594598"
		Char.Camisa.ShirtTemplate = camisaId.Value
	elseif camisaId.Value == "rbxassetid://5581594598" then
		camisaId.Value = "rbxassetid://5829154097"
		Char.Camisa.ShirtTemplate = camisaId.Value
	elseif camisaId.Value == "rbxassetid://5829154097" then
		camisaId.Value = "rbxassetid://6302195065"
		Char.Camisa.ShirtTemplate = camisaId.Value
	elseif camisaId.Value == "rbxassetid://6302195065" then
		camisaId.Value = "rbxassetid://4007917986"
		Char.Camisa.ShirtTemplate = camisaId.Value
	elseif camisaId.Value == "rbxassetid://4007917986" then
		camisaId.Value = "rbxassetid://6198939185"
