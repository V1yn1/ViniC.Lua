	elseif cabeloData.Value == 1 then
		cabeloData.Value = 0
		
		local old = Char.Cabelo.c1
		old.Transparency = 1
		
	end
end)
--Rosto
rosto1.MouseButton1Click:Connect(function()
	if rostoData.Value == "face" then
		Char.Head.face.Transparency = 1
		rostoData.Value = "face1"
		Char.Head.face1.Transparency = 0
	elseif  rostoData.Value == "face1" then
		Char.Head.face1.Transparency = 1
		rostoData.Value = "face2"
		Char.Head.face2.Transparency = 0
	elseif  rostoData.Value == "face2" then
		Char.Head.face2.Transparency = 1
		rostoData.Value = "face3"
		Char.Head.face3.Transparency = 0
	elseif  rostoData.Value == "face3" then
		Char.Head.face3.Transparency = 1
		rostoData.Value = "face4"
		Char.Head.face4.Transparency = 0
	elseif  rostoData.Value == "face4" then
		Char.Head.face4.Transparency = 1
		rostoData.Value = "face5"
		Char.Head.face5.Transparency = 0
	elseif  rostoData.Value == "face5" then
		Char.Head.face5.Transparency = 1
		rostoData.Value = "face6"
		Char.Head.face6.Transparency = 0
	elseif  rostoData.Value == "face6" then
		Char.Head.face6.Transparency = 1
		rostoData.Value = "face1"
		Char.Head.face1.Transparency = 0
	end
end)
rosto2.MouseButton1Click:Connect(function()
	if  rostoData.Value == "face" then
		Char.Head.face.Transparency = 1
		rostoData.Value = "face6"
		Char.Head.face6.Transparency = 0
	elseif  rostoData.Value == "face6" then
