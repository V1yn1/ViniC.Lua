		Char.Head.face1.Transparency = 1
		rostoData.Value = "face6"
		Char.Head.face6.Transparency = 0
	end
end)
--Cor de pele
rassa1.MouseButton1Click:Connect(function()
	if rassaData.Value == "White" then
		rassaData.Value = "Light orange"
		Char.Cor.HeadColor=BrickColor.new(rassaData.Value)
		Char.Cor.LeftArmColor=BrickColor.new(rassaData.Value)
		Char.Cor.LeftLegColor=BrickColor.new(rassaData.Value)
		Char.Cor.RightArmColor=BrickColor.new(rassaData.Value)
		Char.Cor.RightLegColor=BrickColor.new(rassaData.Value)
		Char.Cor.TorsoColor=BrickColor.new(rassaData.Value)
	elseif rassaData.Value == "Light orange" then
		rassaData.Value = "Nougat"
		Char.Cor.HeadColor=BrickColor.new(rassaData.Value)
		Char.Cor.LeftArmColor=BrickColor.new(rassaData.Value)
		Char.Cor.LeftLegColor=BrickColor.new(rassaData.Value)
		Char.Cor.RightArmColor=BrickColor.new(rassaData.Value)
		Char.Cor.RightLegColor=BrickColor.new(rassaData.Value)
		Char.Cor.TorsoColor=BrickColor.new(rassaData.Value)
	elseif rassaData.Value == "Nougat" then
		rassaData.Value = "Dark orange"
		Char.Cor.HeadColor=BrickColor.new(rassaData.Value)
		Char.Cor.LeftArmColor=BrickColor.new(rassaData.Value)
		Char.Cor.LeftLegColor=BrickColor.new(rassaData.Value)
		Char.Cor.RightArmColor=BrickColor.new(rassaData.Value)
		Char.Cor.RightLegColor=BrickColor.new(rassaData.Value)
		Char.Cor.TorsoColor=BrickColor.new(rassaData.Value)
	elseif rassaData.Value == "Dark orange" then
		rassaData.Value = "Burnt Sienna"
		Char.Cor.HeadColor=BrickColor.new(rassaData.Value)
		Char.Cor.LeftArmColor=BrickColor.new(rassaData.Value)
		Char.Cor.LeftLegColor=BrickColor.new(rassaData.Value)
		Char.Cor.RightArmColor=BrickColor.new(rassaData.Value)
		Char.Cor.RightLegColor=BrickColor.new(rassaData.Value)
		Char.Cor.TorsoColor=BrickColor.new(rassaData.Value)
	elseif rassaData.Value == "Burnt Sienna" then 
		rassaData.Value = "Light orange"
		Char.Cor.HeadColor=BrickColor.new(rassaData.Value)
		Char.Cor.LeftArmColor=BrickColor.new(rassaData.Value)
		Char.Cor.LeftLegColor=BrickColor.new(rassaData.Value)
		Char.Cor.RightArmColor=BrickColor.new(rassaData.Value)
		Char.Cor.RightLegColor=BrickColor.new(rassaData.Value)
		Char.Cor.TorsoColor=BrickColor.new(rassaData.Value)
	end
end)

