--Cabelo
cabelo1.MouseButton1Click:Connect(function()
	if cabeloData.Value == 0 then
		cabeloData.Value = 1
		
		local cabelo = Char.Cabelo.c1
		cabelo.Transparency = 0
		
	elseif cabeloData.Value == 1 then
		cabeloData.Value = 2
		
		local old = Char.Cabelo.c1
		old.Transparency = 1
		local cabelo = Char.Cabelo.c2
		cabelo.Transparency = 0
		
	elseif cabeloData.Value == 2 then
		cabeloData.Value = 3

		local old = Char.Cabelo.c2
		old.Transparency = 1
		local cabelo = Char.Cabelo.c3
		cabelo.Transparency = 0
		
	elseif cabeloData.Value == 3 then
		cabeloData.Value = 4
		
		local old = Char.Cabelo.c3
		old.Transparency = 1
		local cabelo = Char.Cabelo.c4
		cabelo.Transparency = 0
		
	elseif cabeloData.Value == 4 then
		cabeloData.Value = 5

		local old = Char.Cabelo.c4
		old.Transparency = 1
		local cabelo = Char.Cabelo.c5
		cabelo.Transparency = 0
		
	elseif cabeloData.Value == 5 then
		cabeloData.Value = 6

		local old = Char.Cabelo.c5
		old.Transparency = 1
		local cabelo = Char.Cabelo.c6
		cabelo.Transparency = 0
		
	elseif cabeloData.Value == 6 then
		cabeloData.Value = 0

		local old = Char.Cabelo.c6
		old.Transparency = 1
	end
end)
cabelo2.MouseButton1Click:Connect(function()
	if cabeloData.Value == 0 then
		cabeloData.Value = 6

		local cabelo = Char.Cabelo.c6
		cabelo.Transparency = 0
		
	elseif cabeloData.Value == 6 then
		cabeloData.Value = 5
		
		local old = Char.Cabelo.c6
		old.Transparency = 1
		local cabelo = Char.Cabelo.c5
